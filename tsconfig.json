{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "ES2022",
		"target": "ES6",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"Hooks/*": ["src/hooks/*"],
			"Services/*": ["src/services/*"],
			"Constants/*": ["src/constants/*"],
			"Utils/*": ["src/utils/*"],
			"CommonComponents/*": ["src/components/common/*"],
			"Types/*": ["src/types/*"],
			"Contexts/*": ["src/contexts/*"]
		}
	},
	"include": ["src"],
}
